block options
doctype html

html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')

        title Centre

        meta(name='theme-color', content='#673ab7')
        meta(name='mobile-web-app-capable', content='yes')
        meta(name='apple-mobile-web-app-capable', content='yes')

        meta(property='og:type', content='website')
        meta(property='og:title', content='Centre')
        meta(property='og:description', content='The web game based on HTML5 Canvas')

        link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/earlyaccess/notosanskr.css')
        block stylesheets

    body
        block body
        script(src='/bower/jquery/dist/jquery.min.js')
        script(src='/bower/vue/dist/vue.min.js')
        script(src='/bower/EaselJS/lib/easeljs-0.8.2.min.js')
        script(src='/socket.io/socket.io.js')
        block scripts
